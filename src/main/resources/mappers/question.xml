<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.ssafy.vue.dao.QuestionMapper">

	<!-- 질문 작성.  -->
	<insert id="insertQuestion" parameterType="QuestionDto">
		insert into question(queTitle,queContent,userid)
		values(#{queTitle},#{queContent},#{userid})
	</insert>

<!-- 	전체 질문 조회 -->
	<select id="getQuestionList" resultType="QuestionDto">
		select qnaNum, queTitle, queContent, queTime,userid
		from question
	</select>
	
<!-- 	특정 공지사항 조회 -->
	<select id="readNotice" resultType="NoticeDto" parameterType="int">
		select num, title, content, regtime
		from notice
		where num = #{num}
	</select>
	
<!-- 	공지사항 수정 -->
	<update id="updateNotice">
        update notice
        set content=#{noticeDto.content}
		where num=#{num}
	</update>
	
<!-- 	공지사항 삭제 -->
	<delete id="deleteNotice" parameterType="int">
		delete from notice
		where num=#{num}
	</delete>
	
</mapper>